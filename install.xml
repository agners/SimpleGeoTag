    <install>
		<queries>
			<query id="1">
				CREATE TABLE IF NOT EXISTS `#__simpleiclesgeotag`( 
				`id` int(10) unsigned NOT NULL auto_increment,
				`content_id` int(10) unsigned NOT NULL,
				`text` text,  `lat` text NOT NULL,
				`long` text NOT NULL,
				`note` text,  
				PRIMARY KEY  (`id`)
				)  TYPE=MyISAM;
			</query>
			<query id="2">
				INSERT INTO `#__simpleiclesgeotag` ( `content_id`, `text`, `lat`, `long`, `note`) VALUES( 1, 'Example 1', '-37.16031654673676', '19.6875', NULL);
			</query>
			<query id="3">
				INSERT INTO `#__simpleiclesgeotag` ( `content_id`, `text`, `lat`, `long`, `note`) VALUES( 2, 'Example 2', '34.05265942137599', '-118.2568359375', NULL);
			</query>
		</queries>
    </install>
    <uninstall>
		<queries>
			<query>
				DROP TABLE `#__simpleiclesgeotag`;
			</query>
		</queries>
    </uninstall>
 
