<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_SIMPLEGEOTAG_CATEGORY_VIEW_TITLE">
		<message>COM_SIMPLEGEOTAG_CATEGORY_VIEW_DESC</message>
	</layout>
	<fields name="params">
		<fieldset name="basic">
			<field name="show_title" type="radio" default="n" label="Show Page Title" description="Show/Hide the Page Title">
				<option value="n">Hide</option>
				<option value="y">Show</option>
			</field>
			<field name="p_title" type="text" size="30"  default="" label="Page title" description="Title of the page" />
            <field name="map_type" type="list" size="4"  default="HYBRID" label="Type of map" description="Choose the map type" >
				<option value="HYBRID">Hybrid</option>
				<option value="SATELLITE">Satellite</option>
				<option value="ROADMAP">Roadmap</option>
				<option value="TERRAIN">Terrain</option>
			</field>
			<field name="zoom_level" type="text" size="2"  default="1" label="Initial map zoom (0-15)" description="Initial map zoom" />			
			<field name="center_lat" type="text" size="30"  default="0" label="Latitude of Map Center" description="Latitude of Map Center" />
			<field name="center_lon" type="text" size="30"  default="0" label="Longitude of Map Center" description="Longitude of Map Center" />
            <field name="map_width" type="text" size="10"  default="100%" label="Map Width" description="Width of the map in pixel or percent" />
            <field name="map_height" type="text" size="10"  default="400px" label="Map Height" description="Height of the map in pixel or percent" />
         </fieldset>
	</fields>
</metadata>