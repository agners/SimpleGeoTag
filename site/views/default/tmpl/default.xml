<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="View Articles Map">
		<message>
			<![CDATA[View Articles Map]]>
		</message>
	</layout>
	<state>
		<name>View Articles Map</name>
		<description>Show a map with a marker for each article geotagged</description>
		<params>
			<param name="show_title" type="radio" default="n" label="Show Page Title" description="Show/Hide the Page Title">
				<option value="n">Hide</option>
				<option value="y">Show</option>
			</param>
			<param name="p_title" type="text" size="30"  default="" label="Page title" description="Title of the page" />
            <param name="map_type" type="list" size="30"  default="HYBRID" label="Type of map" description="Choose the map type" >
				<option value="HYBRID">Hybrid</option>
				<option value="SATELLITE">Satellite</option>
				<option value="ROADMAP">Roadmap</option>
				<option value="TERRAIN">Terrain</option>
			</param>
			<param name="zoom_level" type="text" size="2"  default="1" label="Initial map zoom (0-15)" description="Initial map zoom" />			
			<param name="center_lat" type="text" size="30"  default="0" label="Latitude of Map Center" description="Latitude of Map Center" />
			<param name="center_lon" type="text" size="30"  default="0" label="Longitude of Map Center" description="Longitude of Map Center" />
            <param name="map_width" type="text" size="10"  default="100%" label="Map Width" description="Width of the map in pixel or percent" />
            <param name="map_height" type="text" size="10"  default="400px" label="Map Height" description="Height of the map in pixel or percent" />
         </params>
	</state>
</metadata>